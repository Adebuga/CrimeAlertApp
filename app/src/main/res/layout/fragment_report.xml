<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

<LinearLayout
    android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    android:layout_margin="16dp"
    android:orientation="vertical">

 <TextView
     android:layout_width="fill_parent"
     android:layout_height="fill_parent"
     android:padding="10dp"
     android:text="Fill the information"
     android:textAlignment="center"
     android:textColor="@color/MyApptheme"
     android:textSize="24sp"
     android:textStyle="bold" />

 <TextView
     android:id="@+id/name"
     android:layout_width="match_parent"
     android:layout_height="31dp"
     android:text="Your Name:"
     android:textColor="@android:color/background_dark"
     android:textSize="14dp"
     android:textStyle="bold" />

    <EditText
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="75"
        android:hint="Enter your here"
        android:inputType="text" />

    <EditText
        android:id="@+id/desccrime"
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:ems="1000"
        android:hint="write what acutally happened"
        android:inputType="textMultiLine"
        android:textAlignment="viewStart" />

    <TextView
     android:id="@+id/txtphone"
     android:layout_width="match_parent"
     android:layout_height="31dp"
     android:text="Your phone number:"
     android:textColor="@android:color/background_dark"
     android:textSize="14dp"
     android:textStyle="bold" />


    <EditText
        android:id="@+id/phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="15"
        android:hint="Enter phone number"
        android:inputType="phone" />

 <TextView
     android:layout_width="fill_parent"
     android:layout_height="fill_parent"
     android:text="Crime Type:"
     android:textColor="@android:color/background_dark"
     android:textSize="14sp"
     android:textStyle="bold"/>

 <EditText
     android:id="@+id/crimtype"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:ems="100"
     android:hint="Enter Crime type"
     android:inputType="textPersonName" />

 <TextView
     android:layout_width="fill_parent"
     android:layout_height="fill_parent"
     android:text="Location of Crime:"
     android:textColor="@android:color/background_dark"
     android:textSize="14sp"
     android:textStyle="bold"/>

 <EditText
     android:id="@+id/location"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:ems="100"
     android:hint="Enter the crime location"
     android:inputType="textPersonName" />

 <TextView
     android:layout_width="fill_parent"
     android:layout_height="fill_parent"
     android:text="Describe the scence:"
     android:textColor="@android:color/background_dark"
     android:textSize="14sp"
     android:textStyle="bold"/>


    <ImageView
     android:id="@+id/imageView6"
     android:layout_width="307dp"
     android:layout_height="wrap_content"
     tools:srcCompat="@tools:sample/avatars" />

 <Button
     android:id="@+id/textView5"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:text="Attach Image"
     android:textColor="@android:color/background_dark"
     android:textSize="14sp"
     android:textStyle="bold" />


 <TextView
     android:id="@+id/who_are_involv"
     android:layout_width="fill_parent"
     android:layout_height="36dp"
     android:text="Who were involved in the crime*"
     android:textColor="@android:color/background_dark"
     android:textSize="14sp"
     android:textStyle="bold" />

    <EditText
        android:id="@+id/who"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="100"
        android:hint="Enter here who got involed "
        android:inputType="textPersonName" />
 <TextView
     android:layout_width="fill_parent"
     android:layout_height="fill_parent"
     android:text="What is the Condition/situation*"
     android:textColor="@android:color/background_dark"
     android:textSize="14sp"
     android:textStyle="bold"/>

 <EditText
     android:id="@+id/condition"
     android:layout_width="match_parent"
     android:layout_height="115dp"
     android:ems="100"
     android:hint="Current situation on ground"
     android:inputType="textMultiLine"
     android:textAlignment="viewStart" />

 <Button
     android:id="@+id/submitcrime"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:background="@color/MyApptheme"
     android:text="Submit Crime"
     android:textColor="@android:color/background_light"
     android:textSize="18sp" />


</LinearLayout>


</ScrollView>