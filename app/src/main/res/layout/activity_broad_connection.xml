<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgcolor"
    tools:context=".BroadConnection">

    <TextView
        android:id="@+id/cntxt"
        android:layout_width="307dp"
        android:layout_height="74dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="103dp"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="10dp"
        android:text=""
        android:textSize="25dp"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toTopOf="@+id/conImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/conImage"
        android:layout_width="183dp"
        android:layout_height="159dp"
        android:layout_marginStart="126dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="126dp"
        android:layout_marginBottom="223dp"
        app:layout_constraintBottom_toTopOf="@+id/conbtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cntxt"
        tools:srcCompat="@tools:sample/avatars" />

    <Button
        android:id="@+id/conbtn"
        android:layout_width="182dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="99dp"
        android:layout_marginEnd="130dp"
        android:layout_marginBottom="49dp"
        android:text="TEST CONNECTION"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</android.support.constraint.ConstraintLayout>